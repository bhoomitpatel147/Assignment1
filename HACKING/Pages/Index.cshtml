@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>5 Common Hacking Techniques: </p>
</div>

@{
    var hackingTech = new [] {
        new {
            name = "Social Engineering & Phishing",
            learningLvl = "Easy",
            popularityRate = 9
        },
        new {
            name = "Malware-Injecting Devices",
            learningLvl = "Intermediate",
            popularityRate = 10
        },
        new {
            name = "Missing Security Patches",
            learningLvl = "Hard",
            popularityRate = 7
        },
        new {
            name = "Cracking Passwords",
            learningLvl  = "Easy",
            popularityRate = 5
        },
        new {
            name = "Distributed Denial-of-Service (DDoS)",
            learningLvl = "Intermediate",
            popularityRate = 9 
        }
    };
}


@for (var i = 0; i < hackingTech.Length; i++)
{
    var tech = hackingTech[i];
    <text> Technique name: <b>@tech.name</b> <br/></text>
    <text> Learning Level: @tech.learningLvl <br/></text>     
    <text> Popularity Rate: @tech.popularityRate <br/></text>  <!-- Rate is out of 10 -->
}